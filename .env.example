# 环境配置示例文件
# 复制此文件为 .env 并填入实际配置

# 应用配置
APP_NAME=智能体服务平台
VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true

# 数据库配置
DATABASE_URL=sqlite:///./agent_platform.db

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# 向量数据库配置
CHROMA_PERSIST_DIRECTORY=./chroma_db

# API配置
API_V1_PREFIX=/api/v1

# 安全配置
SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 性能配置
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30

# 日志配置
LOG_LEVEL=INFO
LOG_FORMAT=json

# 百度文心一言配置
BAIDU_API_KEY=your_baidu_api_key
BAIDU_SECRET_KEY=your_baidu_secret_key

# 阿里通义千问配置
DASHSCOPE_API_KEY=your_dashscope_api_key

# 腾讯混元配置
TENCENT_SECRET_ID=your_tencent_secret_id
TENCENT_SECRET_KEY=your_tencent_secret_key

# 智谱AI GLM-4配置 (推荐使用新版本)
ZHIPUAI_API_KEY=your_zhipuai_api_key
ZHIPUAI_MODEL=glm-4
ZHIPUAI_TEMPERATURE=0.7
ZHIPUAI_MAX_TOKENS=8192
ZHIPUAI_TIMEOUT=60
ZHIPUAI_MAX_RETRIES=3

# 讯飞星火配置
XUNFEI_APP_ID=your_xunfei_app_id
XUNFEI_API_KEY=your_xunfei_api_key
XUNFEI_API_SECRET=your_xunfei_api_secret

# 默认模型配置
DEFAULT_MODEL_PROVIDER=zhipu
DEFAULT_MODEL_NAME=glm-4